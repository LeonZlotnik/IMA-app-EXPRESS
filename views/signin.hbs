<form class="form-background" action="/signin" method="POST">
  <label class="label" for="username">Usuario</label>
  <div class="control">
    <input class="input" type="text" name="username"
      placeholder="Introduzca el nombre de usuario. Se recomienda utilizar la razón social o marca de la compañía">
  </div>
  <br>
  <br>
  <label class="label" for="email">Mail</label>
  <div class="control"></div>
  <input class="input" type="text" name="email" placeholder="Introduzca el correo de contacto de la compañía">
  </div>
  <br>
  <br>
  <label class="label" for="password">Contraseña</label>
  <div class="control">
    <input class="input" type="password" name="password" placeholder="Introduzca una contraseña">
  </div>
  <br>
  <br>
  <h3 id="important"><strong>Importante!</strong></h3>
  <br>
  <p>
    IMA
  </p>
  <br>
  <br>
  <input class="button is-primary" type="submit" value="Crear">
</form>