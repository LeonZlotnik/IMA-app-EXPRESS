<form class="form-background" action="/usuarios" method="POST">
  <label class="label" for="username">Usuario</label>
  <div class="control">
    <input class="input" type="text" name="username"
      placeholder="Introduzca el nombre de usuario. Se recomienda utilizar la razón social o marca de la compañía">
  </div>
  <br>
  <br>
  <label class="label" for="email">Mail</label>
  <div class="control"></div>
  <input class="input" type="text" name="email" placeholder="Introduzca el correo de contacto de la compañía">
  </div>
  <br>
  <br>
  <label class="label" for="password">Contraseña</label>
  <div class="control">
    <input class="input" type="password" name="password" placeholder="Introduzca una contraseña">
  </div>
  <br>
  <br>
  <label class="label" for="companyName">Empresa</label>
  <div class="control"></div>
  <input class="input" type="text" name="companyName" placeholder="Introduzca la Razón Social de la compañía">
  </div>
  <br>
  <br>
  <label class="label" for="taxAddress">Dirección Fiscal</label>
  <div class="control"></div>
  <input class="input" type="text" name="taxAddress"
    placeholder="Introduzca la dirección fiscal completa de la compañía">
  </div>
  <br>
  <br>
  <label class="label" for="rfc">RFC</label>
  <div class="control"></div>
  <input class="input" type="text" name="rfc" placeholder="Introduzca el RFC de la compañía">
  </div>
  <br>
  <br>
  <label class="label" for="deliveryAddress">Dirección de Envío</label>
  <div class="control"></div>
  <input class="input" type="text" name="deliveryAddress"
    placeholder="Introduzca la dirección de envío completa de la compañía">
  </div>
  <br>
  <br>
  <input class="button is-primary" type="submit" value="Crear">
</form>